{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vitest",
      "vite/client",
      "vite-plugin-pwa/client"
    ],
    "paths": {
      "~/*": [
        "src/*",
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "postcss.config.js",
    "tailwind.config.js",
    "coverage",
    "cheatsheet",
    "src/composables",
    "src/store",
    "src/modules",
    "src/main.ts",
    "src/types.ts",
  ],
  "typeRoots": [
    "./src/types"
  ]
}